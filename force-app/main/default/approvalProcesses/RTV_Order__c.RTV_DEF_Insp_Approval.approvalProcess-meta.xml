<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>RMS_IDC_LF</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Inspect_QTY_D__c</field>
        <field>Inspect_Amount_D__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Insp_CS_Approve_Time</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RMS_CS_Team</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CS Approval</label>
        <name>CS_Approval</name>
        <rejectionActions>
            <action>
                <name>RTV_DEF_Order_Reject_To_LF</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RTV_DEF_Order_Approval_To_CS</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>WSL Approval</label>
        <name>WSL_Approval</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>RTV_DEF_Order_Reject_To_CS</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Defective审批流（每个Order单独审批）</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Status__c,&apos;Inspected&apos;) &amp;&amp; 
RTV_DEF_Summary__c != null &amp;&amp;
IsDTC__c == false</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Insp_WSL_Confirm_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Insp_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Inspected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RTV_DEF_Order_Insp_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Insp_Wait_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>RTV DEF Insp Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_Inspected</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
