<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>RMS_IDC_LF</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account_Group__c</field>
        <field>Owner</field>
        <field>Application_QTY__c</field>
        <field>Inspect_QTY_A__c</field>
        <field>Inspect_QTY_B__c</field>
        <field>Inspect_QTY_C__c</field>
        <field>Inspect_QTY_D__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Insp_CS_Approve_Time</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RMS_CS_Team</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>RTV_Summary__c.Insp_CS_Approve_Required__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CS Approval</label>
        <name>CS_Approval</name>
        <rejectionActions>
            <action>
                <name>RTV_Summary_Reject_To_LF</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RTV_Summary_Approval_To_CS</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>WSL在打回时默认不需要CS审批，除非InspectQTY被修改</description>
        <label>WSL Approval</label>
        <name>WSL_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Insp_CS_Approve_Required_False</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RTV_Summary_Reject_To_CS</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>RTV_Summary__c.Status__c</field>
            <operation>equals</operation>
            <value>POST to LF</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Insp_Final_Approve_Time</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Insp_Final_Reject_Time</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Insp_Submit_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RTV_Summary_Insp_Approval</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Inspect Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Insp_Final_Reject_Time</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
