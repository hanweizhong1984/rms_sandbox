/**
 * DTC Order的KPI日期变更时，统计DTC Summary的KPI日期
 */
trigger RMS_Order_DTC_Summary_KPI on RTV_Order__c (after update) {
    Set<Id> dtcSummaryIds = new Set<Id>();
    
    // 获取需要更新kpi的DtcSummary
    for (RTV_Order__c newOrd: Trigger.new) {
        RTV_Order__c oldOrd = Trigger.oldMap.get(newOrd.Id);
        
        // DtcOrder且有summary时
        if (newOrd.IsDTC__c == true && newOrd.Return_Summary__c != null) {
            // 更新了order的实际日期时
            if (oldOrd.Actual_Date_Of_PTLF__c != newOrd.Actual_Date_Of_PTLF__c
             || oldOrd.Actual_Date_Of_Delivered__c != newOrd.Actual_Date_Of_Delivered__c
             || oldOrd.Actual_Date_Of_Delivered_Complete__c != newOrd.Actual_Date_Of_Delivered_Complete__c
             || oldOrd.Actual_Date_Of_Inspected__c != newOrd.Actual_Date_Of_Inspected__c
             || oldOrd.Actual_Date_Of_CS_Confirmed__c != newOrd.Actual_Date_Of_CS_Confirmed__c
             || oldOrd.Actual_Date_Of_WSL_Confirmed__c != newOrd.Actual_Date_Of_WSL_Confirmed__c
             || oldOrd.Actual_Date_Of_Inbound__c != newOrd.Actual_Date_Of_Inbound__c) {
                // 记录summary
                dtcSummaryIds.add(newOrd.Return_Summary__c);
            }
        }
    }
    
    // 统计DtcSummary的kpi
    if (dtcSummaryIds.size() > 0) {
        List<RTV_Summary__c> updDtcSummaries = new List<RTV_Summary__c>();
        
        // 统计各order的kpi日期
        for(AggregateResult grp: [
            SELECT Return_Summary__c,
                MIN(Actual_Date_Of_PTLF__c) Actual_Date_Of_PTLF__c,
                MIN(Actual_Date_Of_Delivered__c) Actual_Date_Of_Delivered__c,
                MIN(Actual_Date_Of_Delivered_Complete__c) Actual_Date_Of_Delivered_Complete__c,
                MIN(Actual_Date_Of_Inspected__c) Actual_Date_Of_Inspected__c,
                MIN(Actual_Date_Of_CS_Confirmed__c) Actual_Date_Of_CS_Confirmed__c,
                MIN(Actual_Date_Of_WSL_Confirmed__c) Actual_Date_Of_WSL_Confirmed__c,
                MIN(Actual_Date_Of_Inbound__c) Actual_Date_Of_Inbound__c
            FROM RTV_Order__c
            WHERE Return_Summary__c IN :dtcSummaryIds
            GROUP BY Return_Summary__c
        ]) {
            RTV_Summary__c updSum = new RTV_Summary__c();
            updSum.Id = (Id)grp.get('Return_Summary__c');
            updSum.Actual_Date_Of_PTLF__c = (Date)grp.get('Actual_Date_Of_PTLF__c');
            updSum.Actual_Date_Of_Delivered__c = (Date)grp.get('Actual_Date_Of_Delivered__c');
            updSum.Actual_Date_Of_Delivered_Complete__c = (Date)grp.get('Actual_Date_Of_Delivered_Complete__c');
            updSum.Actual_Date_Of_Inspected__c = (Date)grp.get('Actual_Date_Of_Inspected__c');
            updSum.Actual_Date_Of_CS_Confirmed__c = (Date)grp.get('Actual_Date_Of_CS_Confirmed__c');
            updSum.Actual_Date_Of_WSL_Confirmed__c = (Date)grp.get('Actual_Date_Of_WSL_Confirmed__c');
            updSum.Actual_Date_Of_Inbound__c = (Date)grp.get('Actual_Date_Of_Inbound__c');
            updDtcSummaries.add(updSum);
        }
        if (updDtcSummaries.size() > 0) {
            update updDtcSummaries;
        }
    }
    
