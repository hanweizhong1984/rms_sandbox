        System.debug('设置DTC的默认提货人和电话地址');
        if(trigger.isBefore){
            // 设置DTC的默认提货人和电话地址
            List<RTV_Order__c> ords = [SELECT ID, Ship_To__r.SAP_Customer_Name__c, Ship_To__r.SAP_Tel__c, Ship_To__r.SAP_Addr__c FROM RTV_Order__c WHERE ID IN :chgOrderIds];
            for(RTV_Order__c obj : ords){
                RTV_Order__c ord = Trigger.newMap.get(obj.Id);
                if(ord != null && 
                    ord.Ship_To_Contact__c == null && 
                    ord.Ship_To_Phone1__c == null && 
                    ord.Ship_To_Address__c == null
                ){
                    System.debug('Ship_To_Address__c:' + obj.Ship_To__r.SAP_Addr__c);
                    ord.Ship_To_Contact__c = obj.Ship_To__r.SAP_Customer_Name__c == null ? 'DEFAULT' : obj.Ship_To__r.SAP_Customer_Name__c;
                    ord.Ship_To_Phone1__c = obj.Ship_To__r.SAP_Tel__c == null ? '18888888888' : obj.Ship_To__r.SAP_Tel__c;
                    ord.Ship_To_Address__c = obj.Ship_To__r.SAP_Addr__c== null ? 'CONVERSE ADDR' : obj.Ship_To__r.SAP_Addr__c;
                }
            }
        }

        if(trigger.isAfter){
            // 设置summary状态Post To LF
            if (!chgSummaryIds.isEmpty()) {
                List<RTV_Summary__c> p2lfs = new List<RTV_Summary__c>();
                List<RTV_Summary__c> objs = [SELECT Id, Status__c FROM RTV_Summary__c WHERE Id IN :chgSummaryIds];
                for (RTV_Summary__c obj : objs) {
                    if(obj.Status__c == 'Ready'){
                        obj.Status__c = 'POST to LF';
                        p2lfs.add(obj);
                    }
                }

                if (!p2lfs.isEmpty()) {
                    update p2lfs;
                }
            }
        }
        
