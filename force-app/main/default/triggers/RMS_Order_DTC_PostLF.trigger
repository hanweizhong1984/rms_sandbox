/**
 * DTC场合：
 * 1.当order从Ready变为PostLF时:设置最新季节码
 * 2.设置summary状态Post To LF
 */
trigger RMS_Order_DTC_PostLF  on RTV_Order__c (before update, after update) {
    List<RTV_Order__c> chgOrders = new List<RTV_Order__c>();
    Set<Id> chgOrderIds = new Set<Id>();
    Set<Id> chgSummaryIds = new Set<Id>();
    
    // 当order从Ready变为PostLF时
    for (RTV_Order__c newOrd: Trigger.new) {
        RTV_Order__c oldOrd = Trigger.oldMap.get(newOrd.Id);
        System.debug('ready to lf:' + oldOrd.Status__c + ',' + newOrd.Status__c + ',' + newOrd.Order_Type__c);
        if (oldOrd.Status__c == 'Ready' && newOrd.Status__c == 'POST to LF' && newOrd.Order_Type__c.contains('DTC Takeback')) {
            chgOrders.add(newOrd);
            chgOrderIds.add(newOrd.Id);
            chgSummaryIds.add(newOrd.Return_Summary__c);
        }
    }
