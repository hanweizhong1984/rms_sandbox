    <rules>
        <fullName>RTV Summary CFS Approval</fullName>
        <actions>
            <name>RTV_Summary_Approval_To_CFS_Logistics</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>RTV_Summary__c.Program_Type__c</field>
            <operation>equals</operation>
            <value>CFS DTC Takeback Kick Off</value>
        </criteriaItems>
        <criteriaItems>
            <field>RTV_Summary__c.Insp_Submit_Time__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>当summary中的Insp_Submit_Time__c发生改变时，代表LF提交审核给CFS Logistics,发送邮件给CFS Logistics</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>RTV Summary CS Approval%28BELLE%29</fullName>
        <actions>
            <name>RTV_Summary_Approval_To_WSL_BELLE</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>当CS通过LF提交的审批，发送邮件给HQ</description>
        <formula>(ISCHANGED(Insp_CS_Approve_Time__c) &amp;&amp; Account_Group__r.Name ==&apos;02)Belle&apos;) || (ISCHANGED(Insp_Submit_Time__c) &amp;&amp; Insp_CS_Approve_Required__c == false &amp;&amp; Account_Group__r.Name ==&apos;02)Belle&apos;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
