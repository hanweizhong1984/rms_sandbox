        </actions>
        <active>true</active>
        <description>当summary completed时，发送邮件给BELLE和CS</description>
        <formula>AND(Account_Group__r.Name ==&apos;02)Belle&apos;, TEXT(Status__c) ==&apos;Completed&apos;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
