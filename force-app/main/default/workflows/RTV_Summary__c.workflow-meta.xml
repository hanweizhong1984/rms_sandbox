        <active>true</active>
        <description>当CS通过LF提交的审批，发送邮件给HQ</description>
        <formula>(   ISCHANGED(Insp_CS_Approve_Time__c) &amp;&amp;    Account_Group__r.Name ==&apos;01)YY&apos; ) || (   ISCHANGED(Insp_Submit_Time__c) &amp;&amp;    Insp_CS_Approve_Required__c == false &amp;&amp;    Account_Group__r.Name ==&apos;01)YY&apos; )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>RTV Summary Completed%28BELLE%29</fullName>
        <actions>
            <name>RTV_Summary_Completed_BELLE</name>
