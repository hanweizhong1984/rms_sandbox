public with sharing class RTV_DEF_UploadSellingPrice_All_Batch implements Database.Batchable<RMS_CSV_Iterator.OneLineInfo>, Database.Stateful {
  /** csv的必须列 */
  private static String[] Csv_Fields = new List<String>{
    'DEF Order Item ID',
    'Selling Type',
    'Selling Unit Price (CNY/excl.VAT)'
  };

  /** 参数:csv内容 */
  private final Blob fileUploadBody;
  private final String fileCharset;

  /** 待更新记录 */
  private Map<String, RTV_Order_Item__c> updateItems;

  public RTV_DEF_UploadSellingPrice_All_Batch(
    Blob fileUploadBody,
    String fileCharset
  ) {
    this.fileUploadBody = fileUploadBody;
    this.fileCharset = fileCharset;
  }

  /** 开始 */
  public Iterable<RMS_CSV_Iterator.OneLineInfo> start(
    Database.BatchableContext context
  ) {
    // 返回csv迭代器
    RMS_CSV_Iterator csvIter = new RMS_CSV_Iterator(
      this.fileUploadBody,
      this.fileCharset
    );
    csvIter.skipTitleLineIgnoreCase(Csv_Fields);
    return new RMS_CSV_Iterator.BatchIterable(csvIter);
  }

  /** 执行部分csv行 */
  public void execute(
    Database.BatchableContext context,
    List<RMS_CSV_Iterator.OneLineInfo> trs
  ) {
    this.updateItems = new Map<String, RTV_Order_Item__c>();
    // 遍历csv行，统计sku和shipto
    for (RMS_CSV_Iterator.OneLineInfo tr : trs) {
      RTV_Order_Item__c item = new RTV_Order_Item__c();
      item.Id = tr.get('DEF Order Item ID');
      item.Selling_Type__c = tr.get('Selling Type');
      item.Selling_Unit_Price__c = tr.getDecimal(
        'Selling Unit Price (CNY/excl.VAT)',
        0
      );
      this.updateItems.put(item.Id, item);
    }

    // 更新Items
    if (!this.updateItems.isEmpty()) {
      upsert this.updateItems.values();
    } else {
      throw new RMS_CommonUtil.RMSException('No item found');
    }
  }

  /** 结束 */
  public void finish(Database.BatchableContext info) {
  }
